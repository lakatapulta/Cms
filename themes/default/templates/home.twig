{% extends "layout.twig" %}

{% block body_class %}home{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">
                    Welcome to {{ config('site_title', 'FlexCMS') }}
                </h1>
                <p class="lead mb-4">
                    {{ config('site_description', 'A flexible content management system that grows with your needs.') }}
                </p>
                <div class="d-flex gap-3">
                    <a href="{{ url('/posts') }}" class="btn btn-light btn-lg">
                        View Blog
                    </a>
                    <a href="{{ url('/about') }}" class="btn btn-outline-light btn-lg">
                        Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="{{ theme_asset('images/hero-image.jpg') }}" 
                     alt="FlexCMS" 
                     class="img-fluid rounded shadow"
                     onerror="this.style.display='none'">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="h1 fw-bold mb-3">Why Choose FlexCMS?</h2>
                <p class="lead text-muted">
                    Built with modern technologies and designed for flexibility, 
                    FlexCMS provides everything you need to create amazing websites.
                </p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-plug fa-lg"></i>
                        </div>
                        <h4 class="h5 fw-bold mb-3">Modular Architecture</h4>
                        <p class="text-muted">
                            Extend functionality with plugins and modules. 
                            Only load what you need for optimal performance.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-palette fa-lg"></i>
                        </div>
                        <h4 class="h5 fw-bold mb-3">Theme System</h4>
                        <p class="text-muted">
                            Beautiful, responsive themes that are easy to customize. 
                            Create your own or choose from our collection.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-rocket fa-lg"></i>
                        </div>
                        <h4 class="h5 fw-bold mb-3">High Performance</h4>
                        <p class="text-muted">
                            Built for speed with caching, optimization, and 
                            modern PHP practices for lightning-fast websites.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Posts Section -->
{% if recent_posts %}
<section class="recent-posts py-5 bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="h1 fw-bold mb-3">Latest Blog Posts</h2>
                <p class="lead text-muted">
                    Stay updated with our latest articles, tutorials, and news.
                </p>
            </div>
        </div>
        
        <div class="row g-4">
            {% for post in recent_posts %}
                <div class="col-lg-4 col-md-6">
                    <article class="card h-100 border-0 shadow-sm">
                        {% if post.featured_image %}
                            <img src="{{ post.featured_image }}" 
                                 alt="{{ post.title }}" 
                                 class="card-img-top"
                                 style="height: 200px; object-fit: cover;">
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="{{ url('/posts/' ~ post.slug) }}" 
                                   class="text-decoration-none text-dark">
                                    {{ post.title }}
                                </a>
                            </h5>
                            
                            {% if post.excerpt %}
                                <p class="card-text text-muted">
                                    {{ post.excerpt }}
                                </p>
                            {% endif %}
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        {{ post.created_at|date('M d, Y') }}
                                    </small>
                                    <a href="{{ url('/posts/' ~ post.slug) }}" 
                                       class="btn btn-primary btn-sm">
                                        Read More
                                    </a>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
        
        <div class="text-center mt-4">
            <a href="{{ url('/posts') }}" class="btn btn-outline-primary btn-lg">
                View All Posts
            </a>
        </div>
    </div>
</section>
{% endif %}

<!-- CTA Section -->
<section class="cta py-5 bg-dark text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-8 mx-auto">
                <h2 class="h1 fw-bold mb-3">Ready to Get Started?</h2>
                <p class="lead mb-4">
                    Join thousands of users who trust FlexCMS for their websites.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="{{ url('/register') }}" class="btn btn-primary btn-lg">
                        Sign Up Now
                    </a>
                    <a href="{{ url('/admin') }}" class="btn btn-outline-light btn-lg">
                        Admin Demo
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}