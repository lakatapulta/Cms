{
    "name": "flexcms/core",
    "description": "FlexCMS - A modular content management system like WordPress",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.5",
        "symfony/http-foundation": "^6.3",
        "illuminate/database": "^10.0",
        "illuminate/container": "^10.0",
        "twig/twig": "^3.7",
        "monolog/monolog": "^3.4",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "FlexCMS\\": "app/",
            "Modules\\": "modules/",
            "Themes\\": "themes/"
        },
        "files": [
            "app/Core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan optimize"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}