APP_NAME=FlexCMS
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=flexcms
DB_USERNAME=root
DB_PASSWORD=

# Redis (optional)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@flexcms.local
MAIL_FROM_NAME="${APP_NAME}"

# Security
APP_KEY=base64:your-secret-key-here
SESSION_LIFETIME=120
SESSION_DRIVER=file

# File Storage
STORAGE_DRIVER=local
MAX_UPLOAD_SIZE=10240

# Cache
CACHE_DRIVER=file

# Theme and Modules
ACTIVE_THEME=default
MODULES_AUTO_DISCOVERY=true